---
import Button from '@components/ui/Button.astro';
---

<section id="contact" class="relative py-32 overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-to-br from-pulse/10 to-chronos/10 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-6 lg:px-8 relative z-10">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16 animate-fade-in-up">
        <h2 class="mb-6">Let's <span class="gradient-text">Simplify</span> Together</h2>
        <p class="text-xl md:text-2xl text-gravity-light max-w-2xl mx-auto">
          Tell us what feels too complex â€” we'll make it effortless.
        </p>
      </div>

      <!-- Form -->
      <div class="glass-strong p-8 md:p-12 rounded-3xl animate-fade-in-scale" style="animation-delay: 0.1s;">
        <form class="space-y-6" id="contact-form">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-aurora font-medium mb-3 text-sm uppercase tracking-wide">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-5 py-4 bg-space/60 border border-aurora/20 rounded-2xl text-aurora placeholder-gravity focus:outline-none focus:border-pulse focus:ring-2 focus:ring-pulse/20 transition-all duration-300"
                placeholder="Your name"
              />
            </div>
            <div>
              <label for="email" class="block text-aurora font-medium mb-3 text-sm uppercase tracking-wide">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-5 py-4 bg-space/60 border border-aurora/20 rounded-2xl text-aurora placeholder-gravity focus:outline-none focus:border-pulse focus:ring-2 focus:ring-pulse/20 transition-all duration-300"
                placeholder="your@email.com"
              />
            </div>
          </div>

          <div>
            <label for="company" class="block text-aurora font-medium mb-3 text-sm uppercase tracking-wide">Company (Optional)</label>
            <input
              type="text"
              id="company"
              name="company"
              class="w-full px-5 py-4 bg-space/60 border border-aurora/20 rounded-2xl text-aurora placeholder-gravity focus:outline-none focus:border-pulse focus:ring-2 focus:ring-pulse/20 transition-all duration-300"
              placeholder="Your company"
            />
          </div>

          <div>
            <label for="message" class="block text-aurora font-medium mb-3 text-sm uppercase tracking-wide">Message</label>
            <textarea
              id="message"
              name="message"
              required
              rows="6"
              class="w-full px-5 py-4 bg-space/60 border border-aurora/20 rounded-2xl text-aurora placeholder-gravity focus:outline-none focus:border-pulse focus:ring-2 focus:ring-pulse/20 transition-all duration-300 resize-none"
              placeholder="Tell us about your challenge..."
            ></textarea>
          </div>

          <div class="text-center pt-4">
            <button
              type="submit"
              class="group relative inline-flex items-center justify-center rounded-2xl font-semibold transition-all duration-500 ease-out overflow-hidden bg-gradient-to-r from-pulse to-chronos text-space shadow-lg shadow-pulse/30 hover:shadow-xl hover:shadow-pulse/50 hover:scale-105 before:absolute before:inset-0 before:bg-gradient-to-r before:from-pulse-light before:to-chronos-light before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500 px-12 py-5 text-lg"
            >
              <span class="relative z-10 flex items-center gap-3">
                <span>Send Message</span>
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </span>
            </button>
          </div>
        </form>

        <!-- Alternative Contact -->
        <div class="mt-12 pt-8 border-t border-aurora/10">
          <div class="text-center space-y-4">
            <p class="text-gravity-light">Or reach out directly</p>
            <a href="mailto:hello@scyphora.com" class="inline-flex items-center gap-2 text-xl font-semibold text-pulse hover:text-chronos transition-colors group">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              hello@scyphora.com
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();

    const formData = new FormData(form as HTMLFormElement);
    const data = Object.fromEntries(formData);

    // Here you would send the data to your backend
    console.log('Form submitted:', data);

    // Show success message
    alert('Thank you for your message! We\'ll get back to you soon.');

    // Reset form
    (form as HTMLFormElement).reset();
  });
</script>
