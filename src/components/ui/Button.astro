---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
}

const { variant = 'primary', size = 'md', class: className, ...attrs } = Astro.props;

const baseClasses = 'group relative inline-flex items-center justify-center rounded-2xl font-semibold transition-all duration-500 ease-out overflow-hidden';

const variantClasses = {
  primary: 'bg-gradient-to-r from-pulse to-chronos text-space shadow-lg shadow-pulse/30 hover:shadow-xl hover:shadow-pulse/50 hover:scale-105 before:absolute before:inset-0 before:bg-gradient-to-r before:from-pulse-light before:to-chronos-light before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500',
  secondary: 'bg-gradient-to-br from-gravity to-gravity-light text-aurora border border-aurora/20 hover:border-pulse/50 hover:shadow-lg hover:shadow-pulse/20 hover:scale-105',
  ghost: 'text-aurora border-2 border-aurora/20 hover:border-pulse hover:text-pulse hover:shadow-lg hover:shadow-pulse/30 hover:scale-105 bg-transparent hover:bg-pulse/5',
};

const sizeClasses = {
  sm: 'px-5 py-2.5 text-sm',
  md: 'px-7 py-3.5 text-base',
  lg: 'px-9 py-4 text-lg',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className || ''}`;
---

<a class={classes} {...attrs}>
  <span class="relative z-10 flex items-center gap-2">
    <slot />
  </span>
</a>
